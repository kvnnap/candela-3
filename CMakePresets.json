{
  "version": 10,

  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "general-debug",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/general-debug",
      "installDir": "${sourceDir}/install/general-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },

    {
      "name": "general-release",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/general-release",
      "installDir": "${sourceDir}/install/general-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },

    {
      "name": "win-base",
      "inherits": "base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },

    {
      "name": "msvc",
      "inherits": "win-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },

    {
      "name": "msvc-debug",
      "inherits": "msvc",
      "binaryDir": "${sourceDir}/build/msvc-debug",
      "installDir": "${sourceDir}/install/msvc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "msvc-release",
      "inherits": "msvc",
      "binaryDir": "${sourceDir}/build/msvc-release",
      "installDir": "${sourceDir}/install/msvc-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "llvm-mingw",
      "inherits": "win-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "VCPKG_TARGET_TRIPLET": "x64-mingw-dynamic"
      }
    },

    {
      "name": "llvm-mingw-debug",
      "inherits": "llvm-mingw",
      "binaryDir": "${sourceDir}/build/llvm-mingw-debug",
      "installDir": "${sourceDir}/install/llvm-mingw-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "llvm-mingw-release",
      "inherits": "llvm-mingw",
      "binaryDir": "${sourceDir}/build/llvm-mingw-release",
      "installDir": "${sourceDir}/install/llvm-mingw-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}